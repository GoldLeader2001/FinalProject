<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_2"
    tools:context=".NewsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:id="@+id/newsScroll">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="670dp">

            <TextView
                android:id="@+id/news_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest News"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_news_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/news_card_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cad_news_P"
                    android:background="@color/black_shade_2"
                    >

                    <TextView
                        android:id="@+id/tittle_in_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/cad_news_P"
                        app:layout_constraintStart_toStartOf="@id/cad_news_P"
                        android:layout_marginTop="18dp"
                        android:layout_marginHorizontal="16dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        />

                    <ImageView
                        android:id="@+id/image_in_card"
                        android:layout_width="255dp"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@id/tittle_in_card"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="15dp"

                        />

                    <TextView
                        android:id="@+id/nullbite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Description: "
                        app:layout_constraintTop_toBottomOf="@id/image_in_card"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/desc_in_card"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/image_in_card"
                        app:layout_constraintStart_toEndOf="@id/nullbite"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="17dp"

                        />

                    <TextView
                        android:id="@+id/link_in_card"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/desc_in_card"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:autoLink="web"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"
                        />





                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_news_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_news_content1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cad_news_P2"
                    android:background="@color/black_shade_2"
                    >

                    <TextView
                        android:id="@+id/tittle_in_card2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/cad_news_P2"
                        app:layout_constraintStart_toStartOf="@id/cad_news_P2"
                        android:layout_marginTop="18dp"
                        android:layout_marginHorizontal="16dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        />

                    <ImageView
                        android:id="@+id/image_in_card2"
                        android:layout_width="255dp"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@id/tittle_in_card2"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="15dp"

                        />

                    <TextView
                        android:id="@+id/nullbite2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/image_in_card2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="Description: "
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc_in_card2"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/image_in_card2"
                        app:layout_constraintStart_toEndOf="@id/nullbite2"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="17dp"

                        />

                    <TextView
                        android:id="@+id/link_in_card2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/desc_in_card2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:autoLink="web"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_news_content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_news_content2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cad_news_P3"
                    android:background="@color/black_shade_2"
                    >

                    <TextView
                        android:id="@+id/tittle_in_card3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/cad_news_P3"
                        app:layout_constraintStart_toStartOf="@id/cad_news_P3"
                        android:layout_marginTop="18dp"
                        android:layout_marginHorizontal="16dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        />

                    <ImageView
                        android:id="@+id/image_in_card3"
                        android:layout_width="255dp"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@id/tittle_in_card3"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="15dp"

                        />

                    <TextView
                        android:id="@+id/nullbite3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Description: "
                        app:layout_constraintTop_toBottomOf="@id/image_in_card3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/desc_in_card3"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/image_in_card3"
                        app:layout_constraintStart_toEndOf="@id/nullbite3"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="17dp"

                        />

                    <TextView
                        android:id="@+id/link_in_card3"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/desc_in_card3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:autoLink="web"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"

                        />








                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_news_content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_news_content3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cad_news_P4"
                    android:background="@color/black_shade_2"
                    >

                    <TextView
                        android:id="@+id/tittle_in_card4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/cad_news_P4"
                        app:layout_constraintStart_toStartOf="@id/cad_news_P4"
                        android:layout_marginTop="18dp"
                        android:layout_marginHorizontal="16dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"


                        />

                    <ImageView
                        android:id="@+id/card4_image"
                        android:layout_width="255dp"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toTopOf="@id/tittle_in_card4"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="15dp"

                        />

                    <TextView
                        android:id="@+id/nullbite4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Description: "
                        app:layout_constraintTop_toBottomOf="@id/card4_image"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/card4_descrip"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/card4_image"
                        app:layout_constraintStart_toEndOf="@id/nullbite4"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="17dp"

                        />

                    <TextView
                        android:id="@+id/card4_link"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/card4_descrip"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:autoLink="web"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"

                        />








                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/black_shade_2"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_bar"
        />

</RelativeLayout>